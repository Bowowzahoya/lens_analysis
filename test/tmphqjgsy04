import unittest
from context import lens_analysis
from lens_analysis import applicants as ap
from collections import defaultdict
import pandas as pd

FOLD = "res/"   

class TestIsCn(unittest.TestCase):
    @classmethod
    def setUpClass(cls):
        cls.fam = pd.read_excel(FOLD+"fam_mcov.xlsx", index_col=0)
        
    @unittest.skip
    def testAliasAppsF(self):
        apps = "DJI OK;;SZ DJI TECHNOLOGY CO LTD;;エスゼット ディージェイアイ テクノロジー カンパニー リミテッドＳＺ ＤＪＩ ＴＥＣＨＮＯＬＯＧＹ ＣＯ．，ＬＴＤ"
        def func_1(app):
            if "TECHNOLOGY" in app:
                return "Func1"
            
        def func_2(app):
            if "DJI" in app:
                return "Func2"
        
        apps = ap._alias_apps_f(apps, alias_fs=[func_1, func_2])
        assert apps == "Func1;;エスゼット ディージェイアイ テクノロジー カンパニー リミテッドＳＺ ＤＪＩ ＴＥＣＨＮＯＬＯＧＹ ＣＯ．，ＬＴＤ;;Func2"
        
    @unittest.skip
    def testAliasApps(self):
        aliases = ap.alias_apps(self.fam["Applicants"], alias_d=self.alias_d)
        print(aliases)
        self.fam["Aliases"] = aliases
        self.fam.to_excel("fam_aliases.xlsx")

        
    @unittest.skip
    def testGetAllApps(self):
        apps = ap._get_all_apps(self.fam[ap.APP_COL])
        assert apps['WINDWISDEM CORP'] == [995]
        
        
        
    
    
if __name__ == '__main__':
    unittest.main()